<div class="card">
  <%= form_tag(create_sources_dropbox_index_path) do |f| %>
    <h5 class="card-header">Select Folders</h5>
    <div class="card-body">
      <% @folders.each do |folder| %>
        <div class="input-group pb-1">
          <span class="input-group-addon">
            <%= check_box_tag "folders[#{folder['id']}]", folder['path_lower'] %>
          </span>
          <label class="form-control"><%= folder['path_lower']%></label>
        </div>
      <% end %>

      <%= hidden_field_tag 'organization_id', params[:organization_id] %>
      <%= hidden_field_tag 'source_type_id', params[:source_type_id] %>
      <%= hidden_field_tag 'email', params[:email] %>
      <%= hidden_field_tag 'client_host', params[:client_host] %>

      <div class="input-group pt-2">
        <button type="submit" class="btn btn-sm btn-secondary">Create Sources</button>
      </div>
    </div>
  <%end%>
</div>
