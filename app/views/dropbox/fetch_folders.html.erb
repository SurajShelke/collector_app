<%= form_tag(create_sources_dropbox_index_path) do |f| %>
  <label> Select Folders: </label><br><br>
  <div class='folder_list'>
    <% @folders.each do |folder| %>
      <%= check_box_tag "folders[#{folder['id']}]", folder['path_lower'] %>
      <label><%= folder['path_lower']%></label>
      <br><br>
    <% end %>
  </div>

  <%= hidden_field_tag 'organization_id', params[:organization_id] %>
  <%= hidden_field_tag 'source_type_id', params[:source_type_id] %>
  <%= hidden_field_tag 'email', params[:email] %>
  <%= hidden_field_tag 'client_host', params[:client_host] %>

  <button type="submit">Submit</button>
<%end%>

