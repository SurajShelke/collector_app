<div class="card">
  <%= render "sites_form" %>
  <%= render "drives_form" %>
  <%= form_tag(create_sources_sharepoint_index_path) do |f| %>
    <h5 class="card-header">Select Folders</h5>
    <div class="card-body">
      <div class='row' style="padding: 0px 0px 0px 15px;">
        <label>Root Folder&nbsp;</label><label style="color: gray">(all files and sub-folders present inside 'Shared Documents' folder on the Share point instance will be synced)</label></label>
      </div>
      <div class='row'>
        <div class='col-sm-6 col-md-4 col-lg-4 pt-3'>
          <div class="input-group">
            <div class='form-control'>
              <%= image_tag("folder.png", height: 20, width: 20, class: 'mr-3') %>
              <%= @folders[0]['name']%>
            </div>
            <span class="input-group-addon">
              <label>
                <%= check_box_tag "folders[#{@folders[0]['id']}]", @folders[0]['name'], false, class: 'mr-10'%>
              </label>
            </span>
          </div>
        </div>
      </div></br>
      <div class='row' style="padding: 0px 0px 0px 15px;">
        <label>Sub Folders</label>
      </div>
      <div class='row'>
        <% @folders[1..-1].each do |folder| %>
          <div class='col-sm-6 col-md-4 col-lg-4 pt-3'>
            <div class="input-group">
              <div class='form-control'>
                <%= image_tag("folder.png", height: 20, width: 20, class: 'mr-3') %>
                <%= folder['name']%>
              </div>
              <span class="input-group-addon">
                <label>
                  <%= check_box_tag "folders[#{folder['id']}]", folder['name'], false, class: 'mr-10'%>
                </label>
              </span>
            </div>
          </div>
        <% end %>
      </div>

      <%= hidden_field_tag 'state', params[:state] %>
      <%= hidden_field_tag 'provider_id', params[:provider_id] %>
      <%= hidden_field_tag 'site_id', @site_id %>
      <%= hidden_field_tag 'site_name', @site_name %>
      <%= hidden_field_tag 'drive_id', @drive_id %>
      <div class="pt-3">
        <button type="submit" class="btn btn-secondary">Save</button>
      </div>
    </div>
  <%end%>
</div>
