<% if @drives %>
  <%= form_tag(fetch_folders_team_drive_index_path, :method => 'post') do %>
    <h5 class="card-header">Team Drives (Total: <%= @drives.size || 0 %>)</h5>
    <% drives = @drives.map { |drive| [drive.name, drive.id] } %>

    <div class="styled-select">
      <%= select_tag "drive_id", options_for_select(drives, :selected => @drive_id), prompt: "Select Team Drive", style: "height:56px;width:260px;padding: 10px;align-self: center;" %>
      <%= hidden_field_tag "state", params["state"] %>
      <%= hidden_field_tag "provider_id", params["provider_id"] %>
      <%= submit_tag("Fetch Content", { class: "btn btn-secondary", align: "right" }) %>
    </div>
  <% end %>
<% else %>
  No Team Drives found.
<% end %>