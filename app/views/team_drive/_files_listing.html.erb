<% @files.each do |file| %>
  <div class='col-sm-6 col-md-4 col-lg-4 pt-3'>
    <div class="input-group">
      <div class='form-control'>
        <%= image_tag("folder.png", height: 20, width: 20, class: 'mr-3') %>
        <%= file.name %>
      </div>
      <span class="input-group-addon">
        <label>
          <%= check_box_tag "folders[#{file.id}]", file.name, false, class: 'mr-10' %>
        </label>
      </span>
    </div>
  </div>
<% end %>