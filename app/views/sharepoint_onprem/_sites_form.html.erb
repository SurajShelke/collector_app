<%= form_tag(fetch_folders_sharepoint_onprem_index_path, method: 'get') do %>
  <h5 class="card-header">Sites (Total: <%= @sites.size || 0 %>)</h5>
  <% sites = @sites.map { |site| [site['Title'], site['ServerRelativeUrl']] } %>

  <div class="styled-select">
    <%= select_tag "site_name", options_for_select(sites, :selected => @site_name), style: "height: 50px; max-width: 240px; padding: 13px; align-self: center;" %>
    <%= hidden_field_tag 'provider_id', @provider.id %>
    <%= hidden_field_tag 'sharepoint_url', params[:sharepoint_url] %>
    <%= hidden_field_tag 'client_secret', @client_secret %>
    <%= submit_tag("Select site", { class: "btn btn-secondary", align: "right" }) %>
  </div>
<% end %>